@model UniSAEmloyeeEmployerCertificationAndEngagement.Models.MicroCredentialBadgeWithMicroCredentialNameViewModel[]

<div>
    <h4>User MicroCredentialBadges ViewModel</h4>
    <div><em>@User.Identity.Name Badges Attained</em></div>
    <hr />
    <div style="padding:20px !important;">
        @foreach (var badge in Model)
        {
            <div class="row">
                <div class="col-lg-3">
                    <dt>
                        <h4>@Html.DisplayName("MicroCredentialName")</h4>
                    </dt>
                    <dd>
                        @badge.MicroCredentialName
                    </dd>
                </div>
                <div class="col-lg-3">
                    <dt>
                        <h4>@Html.Label("Certificate Image")</h4>
                    </dt>
                    <dd>
                        @{
                            var certUrl = (ViewBag.CertificateImageUrl as string[]).FirstOrDefault(q => q.Contains(badge.MicroCredentialBadges));

                            <a href="@certUrl"><img src="@certUrl" alt="Certificate for @badge.MicroCredentialName" style="width:28%; margin:auto; height:auto;" /></a>
                        }
                    </dd>
                </div>
                <div class="col-lg-3">
                    <dt>
                        <h4>@Html.Label("Badge Id")</h4>
                    </dt>
                    <dd>
                        @badge.MicroCredentialBadgeId
                    </dd>
                </div>
                <div class="col-lg-3">
                    <dt>
                        <h4>@Html.DisplayName("Badge Name")</h4>
                    </dt>
                    <dd>
                        @badge.MicroCredentialBadges
                    </dd>
                </div>
        </div>
        <div style="width:80%" ;margin:auto;><hr /></div>
    }
    </div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
