@model UniSAEmloyeeEmployerCertificationAndEngagement.Models.JobViewModel

@{
    ViewBag.Title = "ApplyForJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding:10px !important;">
    <h2>Apply For Job</h2>

    <div>
        <h4>Job View Model</h4>
        <hr />

        <form id="PostCVForm" action="@Url.Content("~/Candidate/ApplyForJob")" method="post" enctype="multipart/form-data">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.JobId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.JobId)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.JobCode)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.JobCode)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.JobTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.JobTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.JobDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.JobDescription)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NumberOfPositions)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NumberOfPositions)
                </dd>

                <dt>
                    @((ViewBag.EmployerIdList as List<SelectListItem>).First(e=> e.Value == Model.EmployerId.ToString()).Text)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EmployerId)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>

                <dd>
                    @Model.IsActive.ToString()
                </dd>

            </dl>
            @Html.HiddenFor(model => model.JobId)
            @Html.HiddenFor(model => model.EmployerId)
            @Html.HiddenFor(model => model.JobCode)
            @Html.HiddenFor(model => model.JobTitle)
            @Html.HiddenFor(model => model.JobDescription)
            @Html.HiddenFor(model => model.NumberOfPositions)
            <hr />
            <input type="file" value="Cover Letter" name="CoverLetter" class="fa-file-upload" />
            <input type="file" value="Upload CV" name="CVFile" class="fa-file-upload" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</div>